DataTypes-Events DEFINITIONS ::= BEGIN

    --------------------
    -- Balloon Events --
    --------------------

    Balloon-Events ::= ENUMERATED {
      -- Communication related --
      lost-comm,
      restored-comm,

      -- Balloon altitude related --
      float-altitude,
      ascent-altitude,
      descent-altitude,

      -- Subsystems end of mission events --
      el-finished,
      htl-finished,
      atl-finished,
      pcu-finished,
      nads-finished,
      ttc-finished

      -- TODO: add more events if needed
    }

END
